%h1
  = @post.title.titleize
%p
  = raw rouge_markdown(@post.content)

%span.badge
  Posted
  = @post.created_at.strftime("%d %B %Y")
  by
  = @post.user_name.titleize
.pull-right
  = raw its_category(@post)
%hr

= render 'discus'

- @post_title       = @post.title
- @post_description = truncate(@post.content, length: 100)
