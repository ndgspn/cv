- @posts.each do | post |
  %h1 
    = link_to post.title.titleize, post_path(post)
  %p 
    .content
    = markdown(post.content)
  %span.badge 
    = post.created_at.strftime("%d %B %Y") 
    by
    = post.user_name.titleize
  .pull-right
    = raw(post.categories.map { |category| raw(link_to(category.name.capitalize, category_path(category))) }.join(' / '))    

  = link_to 'Edit', edit_post_path(post)
  = link_to 'Delete', post_path(post), data: {confirm: 'Are you sure delete this post?'}, method: :delete
  %hr
%center
  = will_paginate @posts, renderer: BootstrapPagination::Rails
