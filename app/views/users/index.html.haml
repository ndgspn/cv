%table.table
  %thead
    %tr
      %th Personal Information
      %th
  %tbody
    - @users.each do | user |
      %tr
        %td Name
        %td
          = user.name

      %tr
        %td Nickname
        %td
          = user.nickname
      %tr
        %td Address
        %td
          = user.address
      %tr
        %td Email
        %td
          = user.email
      %tr
        %td Website
        %td
          = user.website
      %tr
        %td Place of Birth
        %td
          = user.place_of_birth
      %tr
        %td Date of Birth
        %td
          = user.date_of_birth
      %tr
        %td Marital Status
        %td
          = user.marital_status
      %tr
        %td Language
        %td
          = user.language


/Login information
%table.table
  %thead
    %tr
      %th Login Information
      %th
  %tbody
    - @users.each do | user |
      %tr
        %td User name
        %td
          = user.username
      %tr
        %td Password
        %td
          Password encrypted
      %tr
        %td
          = link_to 'Edit', edit_user_path(user)
