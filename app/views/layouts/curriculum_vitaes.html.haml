!!!
%html{lang: 'en'}
  %head
    %title Curriculum Vitae
    %meta{charset: 'utf-8'}
    %meta{http: {equiv: 'X-UA-Compatible'}, content: 'IE=edge'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .col-md-6.col-md-offset-3.col-sm-12
      .card.hovercard
        .card-background
          = image_tag('bghead.jpg')
        .useravatar
          = link_to root_path do
            = image_tag('logo2.png')
        .card-info
          %span.card-title
            = site_name
      - if current_user
        = render 'layouts/navbar'
      .btn-pref.btn-group.btn-group-justified.btn-group-lg{role: 'group', aria: {label: '...'}}
        .btn-group{role: 'group'}
          = link_to curriculum_vitaes_path do
            %button{type: 'button', id: 'curricumvitae', class: 'btn btn-primary'}
              %span.glyphicon.glyphicon-grain{aria: {hidden: 'true'}}
              .hidden-xs Curriculum Vitae
      .well
        = yield
      = render 'layouts/footer'
